<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/>
            <corners android:radius="16dp"/>
            <stroke android:width="2dp" android:color="@color/light_gray"/>
            <padding android:left="16dp" android:right="16dp" android:top="12dp" android:bottom="12dp"/>
            <shadowColor android:color="@color/light_gray"/>
            <shadowDx android:offset="2"/>
            <shadowDy android:offset="2"/>
            <shadowRadius android:radius="4dp"/>
        </shape>
    </item>
</selector>
